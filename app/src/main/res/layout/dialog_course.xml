<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="360dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_centerInParent="true"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">
    <TextView
        android:id="@+id/course_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#212121"
        android:text="高等数学"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/course_tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#696969"
        android:drawableLeft="@drawable/ic_location"
        android:gravity="center_vertical"
        android:text="实验三号楼-409"/>
    <TextView
        android:id="@+id/course_tv_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#696969"
        android:drawableLeft="@drawable/ic_teacher"
        android:gravity="center_vertical"
        android:text="肖运豪"/>
    <TextView
        android:id="@+id/course_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#696969"
        android:drawableLeft="@drawable/ic_time"
        android:gravity="center_vertical"
        android:text="7-9节"/>
    <TextView
        android:id="@+id/course_tv_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#696969"
        android:drawableLeft="@drawable/ic_week"
        android:gravity="center_vertical"
        android:text="4-11周"/>
    <ImageView
        android:id="@+id/course_iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_close"/>
</LinearLayout>
